@model MonkeyBanker.Web.Models.Accounts.AccountFormViewModel

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Account.ID)
    <div class="form-group">
        @Html.LabelFor(m => m.Account.Holder)
        @Html.DropDownListFor(m => m.Account.PersonID, Model.Holders)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Account.Balance)
        @Html.TextBoxFor(m => m.Account.Balance)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Account.Bonuses)
        @Html.TextBoxFor(m => m.Account.Bonuses)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Account.Type)
        @Html.EnumDropDownListFor(m => m.Account.Type)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Account.IsActive)
        @Html.CheckBoxFor(m => m.Account.IsActive)
    </div>
    <div>
        <button class="btn btn-default" type="submit">@Model.ButtonTitle</button>
    </div>
}