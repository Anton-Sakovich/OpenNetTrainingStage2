@using MonkeyBanker.Entities
@using MonkeyBanker.Web.Models
@model CrudFormViewModel<Person>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Entity.ID)
    <div class="form-group">
        @Html.LabelFor(m => m.Entity.GivenName)
        @Html.TextBoxFor(m => m.Entity.GivenName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Entity.FamilyName)
        @Html.TextBoxFor(m => m.Entity.FamilyName, new { @class = "form-control" })
    </div>
    <div>
        <button type="submit" class="btn btn-default">@Model.ButtonLabel</button>
    </div>
}